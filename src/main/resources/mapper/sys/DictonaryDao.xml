<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.njust.back_end.modules.sys.dao.DictionaryDao">
    <delete id="deleteById">
        delete
            from dictionary
        where dictionary_id = #{dictionaryId}
    </delete>
    <select id="queryAll" resultType="edu.njust.back_end.modules.sys.entity.DictionaryEntity">
        select *
        from dictionary
        <where>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="code != null">
                and code = #{code}
            </if>
            <if test="type != null">
                and value = #{value}
            </if>
        </where>
    </select>
</mapper>

